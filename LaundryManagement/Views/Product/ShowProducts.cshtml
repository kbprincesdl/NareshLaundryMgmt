                        <a id="@products.ProductDryPrice" style="color:red;margin-left:85px;" onclick="aclickFun(event)">@products.ProductDryPrice</a>
                        <a id="@products.ProductIronPrice" style="color:red;margin-left:85px;" onclick="aclickFun(event)">@products.ProductIronPrice</a>

                        <input id="txtSum_@products.ProductId" type="text" style="width:45px;" />
                    </td>
                </tr>

            }


        <tbody>

    </table>
    <div>
        <input type="button" id="add" value="Add" />

    </div>
    <div>
        <input type="button" id="show" value="Show" onclick="display_array();" />

    </div>
