@model LaundryManagement.Models.ProductModel
@{
    ViewBag.Title = "ShowProducts";
}

<h2>ShowProducts</h2>







<div class="">
    <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Washing</th>
                <th>Drying</th>
                <th>Ironing</th>
                <th>Total</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var products in ViewBag.MyProduct)
